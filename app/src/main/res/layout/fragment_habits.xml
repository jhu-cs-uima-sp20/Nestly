<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".HabitsFragment">


    <LinearLayout
        android:id="@+id/habits_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="15dp"
        tools:context=".HabitsFragment">

        <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical">

            <TextView
                android:id="@+id/introvert"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="I identify as an introvert"
                android:textSize="18sp" />


            <TextView
                android:id="@+id/inTheRoom"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="I plan to do homework, eat food, and throw parties in the room"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/timeSpent"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="Not including sleeping, I plan to spend an average of 8 hours in the room every day"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bringFriends"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="I plan to bring friends over an average of 5 times a week"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/wakeUp"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="I generally wake up around 8AM"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/sleep"
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:gravity="center_vertical"
                android:padding="10dp"
                android:text="I generally sleep around 12AM"
                android:textSize="18sp" />

    </LinearLayout>


    </LinearLayout>
</ScrollView>