    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/habits_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        tools:context=".HabitsFragment">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView0"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:layout_gravity="top"
                android:src="@drawable/bullet_point" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/bullet_point" />

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/bullet_point" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/bullet_point" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/bullet_point" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:src="@drawable/bullet_point" />

        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="20"
        android:orientation="vertical">

        <TextView
            android:id="@+id/introvert"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:lineSpacingExtra="8sp"
            android:padding="10dp"
            android:text="I identify as an introvert"
            android:textAlignment="textStart"
            android:textSize="18sp" />


        <TextView
            android:id="@+id/inTheRoom"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="I plan to do homework, eat food, and throw parties in the room"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/timeSpent"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="Not including sleeping, I plan to spend an average of 8 hours in the room every day"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/bringFriends"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="I plan to bring friends over an average of 5 times a week"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/wakeUp"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="I generally wake up around 8AM"
            android:textAlignment="textStart"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sleep"
            android:layout_width="300dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:padding="10dp"
            android:text="I generally sleep around 12AM"
            android:textAlignment="textStart"
            android:textSize="18sp" />

    </LinearLayout>


    </LinearLayout>
